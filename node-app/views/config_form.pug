extends layout

block content
  h1 Configuration
  form(action='/config', method='POST')
    p 
      | DHT-22 pin
      input(name='dht-22-pin', value=nconf.get('dhtPin'), type='number')
    p
      | MOCK 
      input(name='mock', value=nconf.get('mock'), type='radio')
    p
      | HTTP Port 
      input(name='http-port', value=nconf.get('httpPort'), type='number')
    p
      | PIR pin
      input(name='pir-pin', value=nconf.get('pirPin'), type='number')
    p
      | PIR Polling (milliseconds)
      input(name='poll-millis', value=nconf.get('pollMillis'), type='number')
    p
    input(value='Save', type='submit')

